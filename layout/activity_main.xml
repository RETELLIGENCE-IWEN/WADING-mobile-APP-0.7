<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wading.retelligence.wading.MainActivity"
    android:background="@drawable/wadbackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/button"
            android:text="Identification\n등록"
            android:layout_marginTop="70dp"
            android:onClick="buttonClicked" />

        <Button
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/button2"
            android:text="실시간 추적"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:onClick="buttonClicked" />

        <Button
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/button4"
            android:text="Flight 스케줄\n등록 및 각인"
            android:onClick="buttonClicked"
            android:layout_marginTop="180dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/button3"
            android:text="What is\nWADING?"
            android:onClick="buttonClicked"
            android:layout_marginTop="180dp" />

        <Button
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/button6"
            android:text="기부와 WAD구매"
            android:onClick="buttonClicked"
            android:layout_alignParentRight="true"
            android:layout_marginTop="290dp" />

        <Button
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/button5"
            android:text="Geo Data"
            android:onClick="buttonClicked"
            android:layout_marginTop="290dp" />

        <Button
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:text="설정\options"
            android:id="@+id/button8"
            android:onClick="buttonClicked"
            android:layout_alignParentRight="true"
            android:layout_marginTop="400dp"/>
        <Button
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:text="Flight assistant"
            android:id="@+id/button7"
            android:onClick="buttonClicked"
            android:layout_marginTop="400dp"/>
    </RelativeLayout>

</RelativeLayout>
